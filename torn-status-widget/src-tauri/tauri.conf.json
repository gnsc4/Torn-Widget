{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "identifier": "com.torn.status.widget",
  "productName": "torn-status-widget",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Torn Status Widget",
        "width": 220,
        "height": 150,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": true,
        "fullscreen": false,
        "resizable": false
      }
    ],
    "security": {
      "csp": {
        "default-src": ["'self'", "asset:", "tauri:"],
        "connect-src": [
          "ipc: http://ipc.localhost",
          "https://api.torn.com",
          "https://api.github.com"
        ],
        "script-src": ["'self'", "asset:", "tauri:"],
        "style-src": ["'self'", "asset:", "tauri:", "'unsafe-inline'"],
        "img-src": ["'self'", "asset:", "tauri:", "data:"],
        "font-src": ["'self'", "asset:", "tauri:"]
      },
      "capabilities": [
        {
          "identifier": "default",
          "description": "Default capabilities for the Torn Status Widget main window.",
          "windows": ["main"],
          "webviews": ["main"],
          "permissions": [
            "core:app:default",
            "core:window:default",
            "core:window:allow-start-dragging",
            "core:window:allow-set-size",
            "core:window:allow-set-always-on-top",
            "core:window:allow-close",
            "core:event:default",
            "core:tray:default",
            "core:menu:default",
            "autostart:default",
            "store:default",
            "dialog:default",
            {
              "identifier": "shell:allow-open",
              "allow": ["^http://", "^https://", "^mailto:", "^tel:"]
            },
            "shell:deny-execute",
            "updater:default"
          ]
        }
      ]
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": ["appimage", "deb", "dmg"], 
    "macOS": {
      "minimumSystemVersion": "10.15", 
      "exceptionDomain": "",
      "frameworks": []
    },
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0",
          "librsvg2-common",
          "libayatana-appindicator3-1",
          "libfuse2"
        ],
        "files": {}
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDM3ODkzNkZCMDk3N0IxNUUKUldSZXNYY0oremFKTi9oOHFDMXp4Rm5jeXFHUmRMaU9kMms0ajlKaEdVTGhBN05ya0pKWGFmMUoK",
      "endpoints": [
        "https://github.com/gnsc4/Torn-Widget/releases/latest/download/latest.json"
      ]
    }
  }
}
